@using Hotel.Models
@model Prenotazione

<link rel="stylesheet" href="~/css/creazioni.css" />
@{
    ViewData["Title"] = "Creazione Prenotazione";
}

<h2>@ViewData["Title"]</h2>
<div class="container">
    <form asp-action="CreazionePrenotazione" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="Dal" class="control-label"></label>
            <input asp-for="Dal" class="form-control" type="date" />
            <span asp-validation-for="Dal" class="text-danger fw-bold"></span>
        </div>

        <div class="form-group">
            <label asp-for="Al" class="control-label"></label>
            <input asp-for="Al" class="form-control" type="date" />
            <span asp-validation-for="Al" class="text-danger fw-bold"></span>
        </div>

        <div class="form-group">
            <label asp-for="CaparraConfirmatoria" class="control-label"></label>
            <input asp-for="CaparraConfirmatoria" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="CaparraConfirmatoria" class="text-danger fw-bold"></span>
        </div>

        <div class="form-group">
            <label asp-for="PrezzoTariffa" class="control-label"></label>
            <input asp-for="PrezzoTariffa" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="PrezzoTariffa" class="text-danger fw-bold"></span>
        </div>

        <div class="form-group">
            <label asp-for="DettagliSoggiornoId" class="control-label"></label>
            <input asp-for="DettagliSoggiornoId" class="form-control" />
            <span asp-validation-for="DettagliSoggiornoId" class="text-danger fw-bold"></span>
        </div>

        <div class="form-group">
            <label asp-for="ClienteId" class="control-label"></label>
            <input asp-for="ClienteId" class="form-control" />
            <span asp-validation-for="ClienteId" class="text-danger fw-bold"></span>
        </div>

        <div class="form-group">
            <label asp-for="CameraId" class="control-label"></label>
            <input asp-for="CameraId" class="form-control" />
            <span asp-validation-for="CameraId" class="text-danger fw-bold"></span>
        </div>

        <div class="centerbtn">
            <button type="submit" class="btns btn-primary">Crea</button>
        </div>
    </form>
</div>
<a asp-controller="Home" asp-action="Management" class="btn btn-secondary">Indietro</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
